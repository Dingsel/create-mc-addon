{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "moduleResolution": "Node",
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "lib": ["ES2020", "DOM"],
        "downlevelIteration": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"]
}
